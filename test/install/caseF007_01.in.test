# Script Information
export TESTCASE="F007_01"
export TEST_DESCRIPTION="Loading fails for field without a matching dataprovider in DB"
export TEST_PATH=__WDB_BUILDDIR__/test/install/loadingProgram/gribLoad

# Test Environment
source $TEST_PATH/testEnvironment.sh

# Parse command line
case $1 in
    --help) 
    echo "$SCRIPT_USAGE"; exit 0;;
    --version) 
    echo "$0 $SCRIPT_VERSION"; exit 0;;
    --xml)
		XML_OPT="-x";;
    -x)
		XML_OPT="-x";;
esac

# Timing
startTime=`date +%s%N`
# Prepare Test
TESTTIME=$(date +%FT12:00)
EXPECTED_LOG_MESSAGE="Could not identify dataprovider"
EXECUTE="${GRIBLOAD_PATH}/gribLoad --name ${TEST_FILE}"

# Clean out database
source ${TEST_PATH}/tearDown.sh

# Generate Test Data
rm -f ${TEST_FILE}
${GRIBWRITE_PATH}/gribWrite --testGrid --generatingCentre 1 --generatingProcess 120 --parameter 1 --timeValue ${TESTTIME} --timeUnit 1 --timeRangeIndicator 0 --levelValue 0 --levelUnit 102 ${TEST_FILE}

#Execute Test 
$EXECUTE --logfile $LOGFILE

# Check Result
if ! grep -q -E "$EXPECTED_LOG_MESSAGE" $LOGFILE
then
	if test "$XML_OPT" = "-x"; then
    	echo -e "<testcase name=\"`basename $0` $TEST_DESCRIPTION\" time=\"$totalTime\">\n\t<failure message=\"Did not find expected log message in logs\">\n\t</failure>\n</testcase>"
	else
    	echo -e "not ok $1 - `basename $0`\t$TEST_DESCRIPTION"
	fi
    exit 1
fi

# Clean up
source ${TEST_PATH}/tearDown.sh

# Exit
endTime=`date +%s%N`
totalTime=$(echo "scale = 3; ($endTime-$startTime)/1000000000" | bc -l)
if test "$XML_OPT" = "-x"; then
	echo -e "<testcase name=\"`basename $0` $TEST_DESCRIPTION\" time=\"$totalTime\">\n</testcase>"
else
	echo -e "ok $1 - `basename $0`\t$TEST_DESCRIPTION"
fi
exit 0
